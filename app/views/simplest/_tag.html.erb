<%  url_h={:action => :index.to_s} -%>
<%  case -%>
<%  when (tag.kind_of? Tag) -%>
<%=   div_for tag do -%>
<%      url_h[:tag]=tag.name -%>
<%=     link_to(tag.name, url_h) -%>
<%    end -%>
<%  when ('all'==tag) -%>
<%=   content_tag :div, :class => 'tag' do -%>
<%      url_h.merge! :tag => nil, :trailing_slash => true -%>
<%=     link_to 'all', url_h, :title => 'all tags' -%>
<%    end -%>
<%  else -%>
<%=   content_tag :div, tag, :class => 'tag' -%>
<%  end -%>
