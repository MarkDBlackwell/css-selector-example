<%= div_for picture do -%>
<%    fm = :fields_for -%>
<%=   send(fm, picture, :url => {:controller => 'simplest',
          :action => :index, :id => 1},
          :html => {:method => :put}) do |f| -%>
<%=     render :partial => 'simplest/thumbnail', :locals => {:picture =>
            picture} -%>
<%      [:filename, :sequence, :title, :description, :year, :weight].
            each do |field| -%>
<%=         render :partial => 'simplest/field', :locals => {:record => picture,
                :field => field} -%>
<%      end -%>
<%=     render :partial => 'simplest/tags', :locals => {:tags => picture.
            tags} -%>
<%    end -%>
<%=   content_tag :div, :class => 'edit' do -%>
<%=     content_tag :form, :action => url_for(:controller => :simplest,
            :action => :index, :id => 1), :class => :button_to,
            :method => :get, :target => :_blank  do -%>
<%=       content_tag :div do -%>
<%=         tag :input, :tabindex => '1', :type => :submit, :value => :edit -%>
<%        end -%>
<%      end -%>
<%    end -%>
<%  end # Picture div. -%>
